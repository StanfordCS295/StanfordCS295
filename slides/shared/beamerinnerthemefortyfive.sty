\mode<presentation>

\RequirePackage{tikz}
\usetikzlibrary{positioning}

\defbeamertemplate*{title page}{fortyfive} {
  \usebeamercolor[bg]{title}

  \begin{tikzpicture}[overlay, remember picture]
    \node (title) [anchor=center, rectangle, fill=bg, minimum width=\paperwidth, minimum height=0.4\paperheight] at (current page.center) {
        \centering
        \vbox {
          \usebeamerfont{title}
          \usebeamercolor[fg]{title}
          \inserttitle

          \usebeamerfont{subtitle}
          \usebeamercolor[fg]{subtitle}
          \insertsubtitle
        }
      };

    \node (author) [below=0.4cm of title, minimum width=\paperwidth] {
        \usebeamercolor[fg]{normal text}
        \vbox {
          {
            \centering
            \usebeamerfont{date}
            \usebeamercolor[fg]{date}
            \insertdate
            \par
          }
          {
            \centering
            \usebeamerfont{author}
            \usebeamercolor[fg]{author}
            \insertauthor
            \par
          }
        }
      };
  \end{tikzpicture}
}

\defbeamertemplate*{frametitle}{fortyfive}[1][] {
  \nointerlineskip
  \begin{beamercolorbox}[vmode,wd=\paperwidth,ht=3.25ex,dp=1.25ex,leftskip=0.25in]{frametitle}
      \insertframetitle
      \vfill
  \end{beamercolorbox}

  \usebeamercolor[fg]{normal text}
  \usebeamercolor[fg]{framesubtitle}
  \usebeamerfont{framesubtitle}
  \ifx\insertframesubtitle\@empty {
    \vskip0.1in
  } \else {
    \vskip0.25in
    \insertframesubtitle
  } \fi
}

\setbeamersize
{
  text margin left=0.25in,
  text margin right=0.25in,
}

\mode<all>
